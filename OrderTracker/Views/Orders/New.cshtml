@{
  Layout = "_Layout";
}
<div class="container">
  <h2>Add an order for @Model.VendorName</h2>
    <form action="/vendors/@Model.Id/orders" method="post">
      <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
      <label for="typeOfBread">Type of Bread Ordered</label>
      <input id="typeOfBread" name="typeOfBread" class="form-control" type="text" placeholder="Type of Bread" requuired>
      <br>
      <label for="quantity">Enter quantity:</label>
      <input name="quantity" id="quantity" class="form-control" type="number" placeholder="quantity" required>
      <br>
      <label for="price">Enter total cost:</label>
      <input name="price" id="price" class="form-control" type="number" placeholder="$$$" required>
      <br>
    <label for="date">Date of birth:</label>
      <input name="date" id="date" class="form-control" type="date">
      <br>
      <button class="btn btn-danger" type='submit'>Add Order</button>
    </form>
      <br>   
</div>    