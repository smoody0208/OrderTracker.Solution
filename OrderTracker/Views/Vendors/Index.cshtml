@{
  Layout = "_Layout";
}

@using OrderTracker.Models
<div class="container">
  <h1>Vendors</h1>

  @if (@Model.Count == 0)
  {
    <p>You currently have no vendors!</p>
  }
  <ul>
    @foreach (Vendor vendor in Model)
    {
      
      <li><h3><a href="/vendors/@vendor.Id">@vendor.VendorName</a></h3></li>
      <p>Address: @vendor.VendorAddress</p>
    }
  </ul>  
  <br>
   <form action="/vendors/delete" method="post">
    <button class="btn btn-danger" type="submit" name="button">Clear Vendors</button>
  </form>
  <br>
</div>  