@{
  Layout = "_Layout";
}
@using OrderTracker.Models
<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <p>You currently have no vendors!</p>
}

@foreach (Vendor vendor in Model)
{
  <h3><a href="/vendors/@vendor.Id">@vendor.VendorName</a></h3>
}
<br>
<button class="btn"><a href="/">Home</a></button>
